@model EasyERP.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Logowanie</title>
    <link rel="stylesheet" type="text/css" href="~/Content/reset.css" media="screen">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" media="screen">
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,700&amp;subset=latin,latin-ext" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Arimo&amp;subset=latin,latin-ext" rel="stylesheet" type="text/css">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <![endif]-->
</head>
<body>
    <div id="logowanie">
        <div id="form-outer">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.TextBoxFor(m => m.Name, htmlAttributes: new { id = "login", name = "login", Value = "Wpisz login...", onfocus = "if (this.value == 'Wpisz login...') {this.value = '';}", onblur = "if (this.value == '')  {this.value = 'Wpisz login...';}" })
                @Html.ValidationMessageFor(m => m.Name)
                @Html.TextBoxFor(m => m.Password, htmlAttributes: new { name = "haslo", id = "haslo", Value = "Wpisz hasło...", onfocus = "if (this.value == 'Wpisz hasło...') {this.value = '';} this.type = 'password'", onblur = "if (this.value == '')  {this.value = 'Wpisz hasło...'; this.type = 'text';}" })
                @Html.ValidationMessageFor(m => m.Password)
                <input type="submit" name="zaloguj" id="zaloguj" value="Zaloguj się" />
                @Html.CheckBoxFor(m => m.RememberMe, htmlAttributes: new { id="zapamietaj" })<label id="zaznacz" for="zapamietaj"></label>
                if (!String.IsNullOrEmpty(ViewBag.Error))
                {
                    <table>
                        <tr>
                            <td>
                                <div class="alert alignleft align error max-top">@ViewBag.Error</div>
                            </td>
                        </tr>
                    </table>
                }
            }
        </div>
    </div>
</body>
</html>
