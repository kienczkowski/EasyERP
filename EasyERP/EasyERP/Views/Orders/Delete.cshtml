@model EasyERP.Models.Order

@{
    ViewBag.Title = "Usuwanie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Delete", "Orders", new{ @id = Model.OrderId}, FormMethod.Post, new { @id = "dane-konta" }))
{
    @Html.AntiForgeryToken()

    <h1 class="bold">Usuwanie zamówienie</h1>
    @Html.ActionLink("Anuluj", "Orders", new { }, htmlAttributes: new { @class = "button" })
    <input type="submit" value="Usuń" class="button zapisz transition" />
    <table class="edit">
        <tr>
            <td colspan="2" align="center">
                <h2>Dane dokumentu</h2>
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Seller)
            </td>
            <td>
                @Html.DisplayFor(model => model.Seller, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.StartDate)
            </td>
            <td>
                @Html.DisplayFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Client.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.Client.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Client.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.Client.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
    </table>
}
