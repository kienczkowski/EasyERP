@model EasyERP.Models.Order

@{
    ViewBag.Title = "Szczegóły zamówienia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="dane-konta">
    <h1 class="bold">Szczegóły zamówienie</h1>
    @Html.ActionLink("Anuluj", "Orders", new { }, htmlAttributes: new { @class = "button" })
    @Html.ActionLink("Edytuj", "Edit", new { @id = Model.OrderId }, htmlAttributes: new { @class = "button" })
    <table class="edit">
        <tr>
            <td colspan="2" align="center">
                <h2>Dane dokumentu</h2>
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Seller)
            </td>
            <td>
                @Html.DisplayFor(model => model.Seller, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.StartDate)
            </td>
            <td>
                @Html.DisplayFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Client.FirstName)
            </td>
            <td>
                @Html.DisplayFor(model => model.Client.FirstName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Client.LastName)
            </td>
            <td>
                @Html.DisplayFor(model => model.Client.LastName)
            </td>
        </tr>
    </table>
</div>