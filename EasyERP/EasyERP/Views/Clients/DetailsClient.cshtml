@model EasyERP.Models.HelpModels.ClientOrders

@{
    ViewBag.Title = "Szczegóły/Edycja klienta";
}

<div id="dane-konta">
    <h1 class="bold">Dane adresowe</h1>
    @using (Html.BeginForm("EditClient", "Clients", new { ClientId = @Model.Client.ClientId }, FormMethod.Post))
    {
        <div id="AddEdit">
            @{Html.RenderPartial("_ClientDetails", Model.Client);}
        </div>
    }
</div>
<div id="operacje">
    <h2 class="bold">Operacje</h2>
    <a href="#">Generuj ofertę</a>
    @Html.ActionLink("Stwórz zamówienie", "AddOrder", "Orders", new { ClientId = @Model.Client.ClientId }, null)
</div>
<div class="clr"></div>
<div id="zamowienia">
    <h1 class="bold">Ostatnie zamówienia<a href="#">Wygenerowane oferty</a></h1>
    <a href="#" class="button">Pokaż wszystkie</a>
    <table>
        <thead>
            <tr>
                <th>Numer zamówienia</th>
                <th>Sprzedawca przyjmujący</th>
                <th>Data utworzenia</th>
                <th>Data zakończenia</th>
                <th>Cenia netto/brutto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (EasyERP.Models.Order order in @Model.Orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.Seller</td>
                    <td>@order.StartDate</td>
                    <td>@order.EndDate</td>
                    <td>1400 zł / 2500 zł</td>
                </tr>
            }
            <tr>
                <td colspan="5">
                    <form method="get">
                        <a href="#" id="wstecz"></a>
                        <input type="text" value="1" name="page"><span>/ 5</span>
                        <a href="#" id="dalej"></a>
                    </form>
                </td>
            </tr>
        </tbody>

    </table>
</div>
<div id="notatka">
    <h2 class="bold">Zostaw notatkę</h2>
    <textarea>Uwaga na pana Andrzeja, nerwowy człowiek.</textarea>
</div>

